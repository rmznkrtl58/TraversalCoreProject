@model List<Comment>
<div class="comments mt-5">
    <h4 class="side-title ">Yorumlar (@Model.Count) </h4>
    @foreach(var x in Model){
    <div class="media mt-4">
        <div class="img-circle">
            <img src="~/web2/assets/images/avatar.png" class="img-fluid" alt="...">
        </div>
       
        <div class="media-body">

            <ul class="time-rply mb-2">
                <li>
                    <a href="#URL" class="name mt-0 mb-2 d-block">@x.CommentUser</a>
                    @Convert.ToDateTime(x.CommentDate).ToString("dd/MM/yyyy")
                </li>
                <li class="reply-last">
                    <a href="#reply" class="reply">
                        Yanıtla
                    </a>
                </li>
            </ul>
            <p>
               @x.CommentContent
            </p>
        </div>
    </div>
    }
</div>