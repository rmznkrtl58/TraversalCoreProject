@model List<Feature>
<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h3 class="hny-title">Fotoğraf Galerimiz</h3>
        </div>
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6">
                <div style="margin-top:20px" class="maghny-grid">
                    <figure class="effect-lily border-radius  m-0">
                        <img  style="height:635px" class="img-fluid" src="@ViewBag.i" alt="" />
                    </figure>
                </div>
            </div>
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @foreach (var x in Model) { 
                    <div class="maghny-gd-1 col-6 mt-4">
                        <div class="maghny-grid">
                            <figure class="effect-lily border-radius">
                                <img class="img-fluid" src="@x.Post1Image" alt="" />
                            </figure>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>