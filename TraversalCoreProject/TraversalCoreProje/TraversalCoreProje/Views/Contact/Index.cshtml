@using DTOLayer.DTOs.ContactDTOs
@model SendMessageDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!doctype html>
<html lang="zxx">
<body>
    <section class="w3l-contact" id="contact">
        @await Html.PartialAsync("/Views/MainLayoutPartial/_IntroductionTitle.cshtml")
        <div class="contact-infubd py-5">
            <div class="container py-lg-3">
                <div class="contact-grids row">
                    <div class="col-lg-6 contact-left">
                        <div class="partners">
                            <div class="cont-details">
                                <h5>İletişim Bilgilerimiz</h5>
                                <p class="mt-3 mb-4">
                                    Merhaba,sevgili gezgin bize 7Gün/24Saat whatsap,mail,mesaj gibi iletişim ağlarımız üzerinden ulaşabilirsin.
                                </p>
                            </div>
                            <div class="hours">
                                <h6 class="mt-4">E-Posta Adresimiz:</h6>
                                <p>
                                    <a href="mailto:mail@traversal.com">
                                        mail@traversal.com
                                    </a>
                                </p>
                                <h6 class="mt-4">Ofisimize Gelin:</h6>
                                <p> Adresimiz olacak dinamik hale getireceğiz</p>
                                <h6 class="mt-4">Contact:</h6>
                                <p class="margin-top"><a href="tel:+44-255-366-88">+90(500) 320 5010</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                        <form  method="post" class="signin-form">
                            <div class="input-grids">
                                <div class="form-group">
                                    <input type="text" asp-for="Name"  placeholder="Adınız*"  class="contact-input" />
                                     <span asp-validation-for="Name" class="text-primary"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" asp-for="Mail" placeholder="Mail Adresiniz*" class="contact-input" />
                                    <span asp-validation-for="Mail" class="text-primary"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="Subject" placeholder="Konu*" class="contact-input" />
                                    <span asp-validation-for="Subject" class="text-primary"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea asp-for="MessageContent" placeholder="Mesajınız*"></textarea>
                                <span asp-validation-for="MessageContent" class="text-primary"></span>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-style btn-primary">Mesaj Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="map mt-5 pt-md-5">
                    <h5>Map</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387145.86654334463!2d-74.25818682528057!3d40.70531100753592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sin!4v1493028309728"
                            style="border:0" allowfullscreen=""></iframe>
                </div>
            </div>
            </div>
    </section>
</body>

</html>

