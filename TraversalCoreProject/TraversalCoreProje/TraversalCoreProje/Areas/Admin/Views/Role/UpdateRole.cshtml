@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Rol Güncelleme Sayfası</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x=>x.RoleId)
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-company">Rol Adı:</label>
                        @Html.TextBoxFor(x => x.RoleName, new { @class = "form-control", @placeholder = "Rol Adı" })
                    </div>
                    <button class="btn btn-success">Rol Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>



