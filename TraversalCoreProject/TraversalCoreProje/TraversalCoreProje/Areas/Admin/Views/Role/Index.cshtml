
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}
<div class="card">
    <h4 class="card-header" style="color:darkgreen">Rol Listesi</h4>
    <div class="table-responsive text-nowrap">
        @{
            if (Model.Count > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rol Adı:</th>
                        <th>Rolu Sil</th>
                        <th>Rolu Güncelle</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var x in Model)
                    {

                        <tr>
                            @{
                                sayac++;
                            }
                            <td>@sayac</td>
                            <td>@x.Name</td>
                            <td><a href="/Admin/Role/DeleteRole/@x.Id" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Admin/Role/UpdateRole/@x.Id" class="btn btn-warning">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-primary">
                <span>Role Bulunamadı</span>
                </div>
            }
        }
    </div>
    <a href="/Admin/Role/AddRole/" style="color:black" class="btn btn-success">Rol Ekle</a>
</div>



