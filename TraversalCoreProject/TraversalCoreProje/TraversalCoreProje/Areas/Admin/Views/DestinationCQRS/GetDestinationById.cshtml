@model GetDestinationByIdQueryResult
@{
    ViewData["Title"] = "GetDestinationById";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Rota Güncelleme Sayfası (CQRS)</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x=>x.DestinationId)
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-company">Şehİr:</label>
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control", @placeholder = "Şehir" })
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-company">Gün/Gece:</label>
                        @Html.TextBoxFor(x => x.DayNight, new { @class = "form-control", @placeholder = "Gün/Gece" })
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-company">FİYAT:</label>
                        @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @placeholder = "Fiyat" })
                    </div>
                    <button class="btn btn-success">Rota Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>



